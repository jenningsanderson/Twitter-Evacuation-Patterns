source 'http://rubygems.org'


#Database Gems -- This really isn't pretty, but it works...
gem 'bson',   	'~> 1.11.1'
gem 'bson_ext', '~> 1.11.1'
gem 'mongo', 	'~> 1.11.1' 
gem 'mongo_mapper'
gem 'rails'


#Geographic Gems
gem 'rgeo'
gem 'rgeo-geojson'

#I want to get rid of this one, I will incorporate these into epic-geo
gem 'georuby'


#Stealing neat parts of these gems...
gem 'debugger'
gem 'activesupport'



#If we use the Gemfile, then we can always build the latest version of epic-geo
gem 'epic-geo', :git => 'git://github.com/jenningsanderson/epic-geo.git'

#We'll be using Static Bliss for the S3 stuff as well
gem 'Static-Bliss', :git => 'git://github.com/jenningsanderson/Static-bliss.git'